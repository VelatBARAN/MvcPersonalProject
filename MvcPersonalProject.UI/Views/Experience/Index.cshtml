@model IEnumerable<MvcPersonalProject.Entity.Experiences>

@{
    ViewBag.Title = "Deneyimler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
            <hr />
        </div>
    </div>
</div>
<p>
    <a href="/Experience/Create" class="btn btn-primary" title="Yeni Deneyim Ekle"> <i class="fa fa-plus"></i> Yeni Deneyim Ekle</a>
</p>
<table class="table table-bordered table-striped table-hover table-sm" id="expTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Institution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Institution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.Raw(item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td class="text-center">
                @if (item.IsActive)
                {
                    <i class="fa fa-check text-success"></i>
                }
                else
                {
                    <i class="fa fa-remove text-danger"></i>
                }
            </td>
            <td>
                <a href="/Experience/Edit/@item.Id" title="Güncelle" class="btn btn-warning"><i class="fa fa-edit mr-2"> Güncelle</i></a>
                <a href="/Experience/Details/@item.Id" title="Detay" class="btn btn-default"> <i class="fa fa-search mr-2"> Detay</i></a>
                <a title="Sil" class="btn btn-danger expDelete" data-id="@item.Id"> <i class="fa fa-trash-o mr-2"> Sil</i></a>
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/customDelete.js"></script>
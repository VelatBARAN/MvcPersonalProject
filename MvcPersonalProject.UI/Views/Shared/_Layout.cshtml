@using MvcPersonalProject.BLL
@{ 
    UserManager userManager = new UserManager();
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Welat BARAN - Anasayfa</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Image/logo.png" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <link href="~/Content/WebUI/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/WebUI/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/Content/WebUI/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/WebUI/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/Content/WebUI/assets/vendor/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/WebUI/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/WebUI/assets/vendor/aos/aos.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/WebUI/assets/css/style.css" rel="stylesheet">

</head>

<body>

    <!-- ======= Mobile nav toggle button ======= -->
    <button type="button" class="mobile-nav-toggle d-xl-none"><i class="icofont-navigation-menu"></i></button>

    <!-- ======= Header ======= -->
    <header id="header">
        @foreach (var item in userManager.List())
        {
            <div class="d-flex flex-column">
                <div class="profile">
                    <img src="~/Image/user/@item.Image" alt="" class="img-fluid rounded-circle" />
                    <h1 class="text-light"><a href="/Home/Index">Welat BARAN</a></h1>
                    <div class="text-center">
                        <a href="@item.Twitter" target="_blank"><i class="fa fa-twitter mr-1" title="Twitter"></i></a>
                        <a href="@item.Telegram" target="_blank"><i class="fa fa-telegram mr-1" title="Telegram"></i></a>
                        <a href="@item.Instagram" target="_blank"><i class="fa fa-instagram mr-1" title="Instagram"></i></a>
                        <a href="@item.Github" target="_blank"><i class="fa fa-github" title="Github"></i></a>
                    </div>
                </div>

                <nav class="nav-menu">
                    <ul>
                        <li class="active"><a href="/Home/Index"><i class="bx bx-home"></i> <span>Anasayfa</span></a></li>
                        <li><a href="#about"><i class="bx bx-user"></i> <span>Hakkımda</span></a></li>
                        <li><a href="#resume"><i class="bx bx-file-blank"></i> <span>Özgeçmiş</span></a></li>
                        <li><a href="#portfolio"><i class="bx bx-book-content"></i> Yapılan Projeler</a></li>
                        <li><a href="#services"><i class="bx bx-server"></i> Hizmetler</a></li>
                        <li><a href="#contact"><i class="bx bx-envelope"></i> İletişim</a></li>

                    </ul>
                </nav><!-- .nav-menu -->
                <button type="button" class="mobile-nav-toggle d-xl-none"><i class="icofont-navigation-menu"></i></button>

            </div>
        }

    </header><!-- End Header -->

    <main id="main">

        @RenderBody()

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Telif Hakkı <strong><span>@DateTime.Now.Year</span></strong>
            </div>
            <div class="credits">
                Welat BARAN tarafından yapıldı. Tüm Hakları Saklıdır</a>
            </div>
        </div>
    </footer><!-- End  Footer -->

    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Content/WebUI/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/WebUI/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/WebUI/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/Content/WebUI/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/WebUI/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/Content/WebUI/assets/vendor/counterup/counterup.min.js"></script>
    <script src="~/Content/WebUI/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Content/WebUI/assets/vendor/venobox/venobox.min.js"></script>
    <script src="~/Content/WebUI/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/Content/WebUI/assets/vendor/typed.js/typed.min.js"></script>
    <script src="~/Content/WebUI/assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/WebUI/assets/js/main.js"></script>

</body>

</html>
@using MvcPersonalProject.Entity
@model ProjectsDones
@{
    ViewBag.Title = "Güncelleme";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
            <hr />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "ProjectDone", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(false)
                @Html.HiddenFor(model => model.Id)
                <div class="form-group row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.Image1, htmlAttributes: new { @class = "control-label" })
                        <img src="~/Image/projectsdone/@Model.Image1" class="img-responsive img-rounded mb-2" width="128" height="128" alt="" />
                        @*@Html.HiddenFor(model => model.Image1)*@
                        <div class="custom-file">
                            <input type="file" name="Image1" id="Image1" class="form-control" accept=".png,.jpg,.jpeg" /><br />
                            <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                            <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.Image2, htmlAttributes: new { @class = "control-label" })
                        <img src="~/Image/projectsdone/@Model.Image2" class="img-responsive img-rounded mb-2" width="128" height="128" alt="" />
                        @*@Html.HiddenFor(model => model.Image2)*@
                        <div class="custom-file">
                            <input type="file" name="Image2" id="Image2" class="form-control" accept=".png,.jpg,.jpeg" /><br />
                            <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                            <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.Image3, htmlAttributes: new { @class = "control-label" })
                        <img src="~/Image/projectsdone/@Model.Image3" class="img-responsive img-rounded mb-2" width="128" height="128" alt="" />
                        @*@Html.HiddenFor(model => model.Image3)*@
                        <div class="custom-file">
                            <input type="file" name="Image3" id="Image3" class="form-control" accept=".png,.jpg,.jpeg" /><br />
                            <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                            <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        @Html.LabelFor(model => model.Services.Title, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.ServicesId, (SelectList)ViewBag.ServicesId, "Lütfen hizmet alanını seçiniz", new { @class = "dropdown form-control pull-right" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        @Html.LabelFor(model => model.Teknologies, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Teknologies, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        @Html.LabelFor(model => model.Customer, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Customer, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                        <textarea name="Description" class="ckeditor form-control">@Model.Description</textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        @Html.LabelFor(model => model.ProjectDoneDate, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.ProjectDoneDate, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        <button type="submit" class="btn btn-success"> <i class="fa fa-save mr-2"></i>Kaydet</button>
                        <a href="/ProjectDone/Index" class="btn btn-danger"><i class="fa fa-angle-double-left mr-2"></i>İptal</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


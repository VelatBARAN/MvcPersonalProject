@model MvcPersonalProject.Entity.Services

@{
    ViewBag.Title = "Güncelleme";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="display-4">
            @ViewBag.Title
            <hr />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "Service", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(false)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label" })
                        @*@Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "ckeditor" } })*@
                        <textarea name="Text" class="ckeditor form-control">@Model.Text</textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-10 offset-1">
                        <button type="submit" class="btn btn-success"> <i class="fa fa-save"></i>Kaydet</button>
                        <a href="/Service/Index" class="btn btn-danger"><i class="fa fa-angle-double-left"></i>İptal</a>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

